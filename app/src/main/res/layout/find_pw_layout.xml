<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Sign_Up_Activity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="300dp"
            android:padding="10dp"
            android:id="@+id/relative1"
            >

            <EditText
                android:id="@+id/sign_up_ed_id"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="23dp"
                android:drawableLeft="@drawable/id"
                android:hint=" ID"
                android:fontFamily="@font/jalnan"/>

            <Button
                android:id="@+id/sign_up_ed_id_checkbtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/sign_up_ed_id"
                android:text="중복확인"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/sign_up_tv_duplicate_verification_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_ed_id"
                android:layout_marginHorizontal="20dp"
                android:text="중복확인 완료"
                android:visibility="invisible"
                android:fontFamily="@font/jalnan"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <EditText
                android:id="@+id/sign_up_ed_nickname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="23dp"
                android:drawableLeft="@drawable/user_mini"
                android:hint=" nickname"
                android:fontFamily="@font/jalnan"/>

            <Button
                android:id="@+id/sign_up_ed_nickname_checkbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/sign_up_ed_nickname"
                android:text="중복확인"
                android:fontFamily="@font/jalnan"/>
            <TextView
                android:id="@+id/sign_up_tv_duplicate_verification_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_ed_nickname"
                android:layout_marginHorizontal="20dp"
                android:text="중복확인 완료"
                android:visibility="invisible"
                android:fontFamily="@font/jalnan"
                ></TextView>
        </RelativeLayout>

        <EditText
            android:drawableLeft="@drawable/key"
            android:id="@+id/sign_up_ed_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint=" PW"
            android:fontFamily="@font/jalnan">
        </EditText>

        <EditText
            android:id="@+id/sign_up_ed_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="PW확인"
            android:fontFamily="@font/jalnan"
            ></EditText>
        <TextView
            android:id="@+id/sign_up_tv_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_up_ed_pw_check"
            android:text="비밀번호가 일치하지 않습니다."
            android:layout_marginHorizontal="30dp"
            android:visibility="invisible"
            android:fontFamily="@font/jalnan"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:drawableLeft="@drawable/email"
                android:id="@+id/sign_up_ed_email"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:hint=" 이메일"
                android:fontFamily="@font/jalnan">
            </EditText>
            <Spinner

                android:id="@+id/sign_up_email_spinner"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true">
            </Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="150dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="가입"
            android:textStyle="bold"
            android:background="@drawable/button_circle_gradient"
            android:fontFamily="@font/jalnan"

            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/head_design"
        android:gravity="center"
        android:text="W E L C O M E  !"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="italic"
        android:fontFamily="@font/jalnan"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/tv_circle_gradient"
        android:layout_marginVertical="175dp"
        android:layout_marginHorizontal="160dp"
        android:fontFamily="@font/jalnan"
        />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginVertical="190dp"
        android:src="@drawable/user" />




</FrameLayout>