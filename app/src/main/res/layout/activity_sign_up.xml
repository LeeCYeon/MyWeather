    <!--        />-->


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginVertical="30dp"
        android:src="@drawable/user" />
    <LinearLayout
        android:layout_marginTop="100dp"
        android:background="@drawable/back_round"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/relative1"
            >

            <EditText
                android:id="@+id/sign_up_ed_id"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="23dp"
                android:drawableLeft="@drawable/id"
                android:fontFamily="@font/jalnan"
                android:hint=" ID" />

            <Button
                android:id="@+id/sign_up_ed_id_checkbtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/sign_up_ed_id"
                android:backgroundTint="#9890e3"
                android:text="중복확인"
                android:textColor="@color/white"
                android:fontFamily="@font/jalnan"/>


            <TextView
                android:id="@+id/sign_up_tv_duplicate_verification_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_ed_id"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/jalnan"
                android:text="중복확인 완료"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <EditText
                android:id="@+id/sign_up_ed_nickname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="23dp"
                android:drawableLeft="@drawable/user_mini"
                android:hint=" nickname"
                android:fontFamily="@font/jalnan"/>

            <Button
                android:textColor="@color/white"
                android:id="@+id/sign_up_ed_nickname_checkbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/sign_up_ed_nickname"
                android:backgroundTint="#9890e3"
                android:text="중복확인"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/sign_up_tv_duplicate_verification_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_ed_nickname"
                android:layout_marginHorizontal="25dp"
                android:text="중복확인 완료"
                android:visibility="invisible"
                android:fontFamily="@font/jalnan"></TextView>
        </RelativeLayout>

        <EditText
            android:drawableLeft="@drawable/key"
            android:id="@+id/sign_up_ed_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="textPassword"
            android:hint=" PW"
            android:fontFamily="@font/jalnan">
        </EditText>

        <EditText
            android:id="@+id/sign_up_ed_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginRight="30dp"
            android:hint="PW확인"
            android:inputType="textPassword"
            android:fontFamily="@font/jalnan"
            ></EditText>

        <TextView
            android:id="@+id/sign_up_tv_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_up_ed_pw_check"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:text="비밀번호가 일치하지 않습니다."
            android:visibility="invisible"
            android:fontFamily="@font/jalnan"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            >

            <EditText
                android:drawableLeft="@drawable/email"
                android:id="@+id/sign_up_ed_email"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" 이메일"
                android:fontFamily="@font/jalnan">
            </EditText>
            <Spinner
                android:id="@+id/sign_up_email_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <Button
            android:backgroundTint="#9890e3"
            android:textColor="@color/white"
            android:id="@+id/sign_up_btn_input_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="주소 입력"
            android:fontFamily="@font/jalnan"/>

        <LinearLayout
            android:background="#10ffffff"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sign_up_tv_do"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10pt"
                android:visibility="invisible"
                android:fontFamily="@font/jalnan"/>
            <TextView
                android:id="@+id/sign_up_tv_si_gun_gu"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10pt"
                android:visibility="invisible"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/sign_up_tv_eup_myeon_dong"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10pt"
                android:visibility="invisible"
                android:fontFamily="@font/jalnan"/>

        </LinearLayout>


        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_circle_gradient"
            android:text="가입"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/jalnan"

            />
    </LinearLayout>

