<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activity.Login_Activity"
    android:background="@drawable/gradient_purple"
    >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/login_design2"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame_shape"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOGIN"
            android:layout_marginBottom="20dp"
            android:textSize="30dp"
            android:fontFamily="@font/jalnan"
            android:textStyle="bold"></TextView>


        <EditText
            android:id="@+id/login_ed_id"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:hint="ID"
            android:textSize="17dp"
            android:background="@drawable/edit_text_custom"
            android:fontFamily="@font/scdream5"
            android:paddingLeft="15dp"
            ></EditText>

        <EditText
            android:id="@+id/login_ed_pw"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:layout_marginHorizontal="30dp"
            android:hint="PW"
            android:textSize="17dp"
            android:background="@drawable/edit_text_custom"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/scdream5"
            android:paddingLeft="15dp"
            ></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            >
            <CheckBox
                android:id="@+id/login_autologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="자동로그인"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/jalnan">

            </CheckBox>

            <TextView
                android:id="@+id/login_tv_findPW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="PW찾기"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/jalnan"></TextView>

            <TextView
                android:id="@+id/login_tv_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/jalnan"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="로그인"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="#e2ebf0"
            android:fontFamily="@font/jalnan"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="My Weather"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/jalnan"
        />

</LinearLayout>