<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_spinner"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/dialog_round"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:src="@drawable/dialog_favorite4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/dialog_iv"
            android:text="Set location"
            android:textColor="#7F78D2"
            android:textSize="20dp"
            android:fontFamily="@font/jalnan"/>

    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_dialog_tv_do"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*시/도"
            android:textSize="13dp"
            android:fontFamily="@font/jalnan"/>

        <TextView
            android:id="@+id/custom_dialog_tv_si_gun_gu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:text="*시/군/구"
            android:textSize="13dp"
            android:fontFamily="@font/jalnan"/>

        <TextView
            android:id="@+id/custom_dialog_tv_eup_myeon_dong"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:text="*읍/면/동"
            android:textSize="13dp"
            android:fontFamily="@font/jalnan"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Spinner
            android:backgroundTint="#4D96FF"
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner2"
            android:backgroundTint="#4D96FF"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:spinnerMode="dialog" />

        <Spinner
            android:backgroundTint="#4D96FF"
            android:id="@+id/spinner3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
    <Button
        android:background="@drawable/button_circle_gradient"
        android:id="@+id/custom_dialog_btn_input"
        android:layout_width="90dp"
        android:layout_marginRight="10dp"
        android:layout_height="35dp"
        android:text="OK"
        android:textColor="@color/white"
        android:backgroundTint="#4E97F7"
        android:layout_gravity="center"
        android:fontFamily="@font/jalnan"/>

    <Button
        android:background="@drawable/button_circle_gradient"
        android:id="@+id/custom_dialog_btn_cancel"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:backgroundTint="#4E97F7"
        android:layout_gravity="center"
        android:fontFamily="@font/jalnan"/>
    </LinearLayout>
</LinearLayout>