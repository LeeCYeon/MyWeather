<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:background="@drawable/gradient_background"
        android:padding="20dp"
        tools:context="Fragment.MainMenuHomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="165dp"
                android:layout_gravity="right"
                android:id="@+id/home_img_home_icon"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:paddingTop="50dp"
                />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--    수평선-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" />
                <!-- TODO: Update blank fragment layout -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/placeholder" />

                        <TextView
                            android:paddingTop="5dp"
                            android:id="@+id/home_tv_main_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Loading...."
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:typeface="monospace"
                            android:fontFamily="@font/jalnan"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/jalnan"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="10dp"
                            android:id="@+id/home_tv_now_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="60dp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            android:fontFamily="@font/jalnan"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_tv_yesterday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:text="Loading...."
                                android:textSize="15dp"
                                android:layout_marginRight="3dp"
                                android:fontFamily="@font/jalnan"/>

                            <TextView
                                android:id="@+id/home_tv_comp_yesterday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_marginRight="3dp"
                                android:fontFamily="@font/jalnan"/>

                            <TextView
                                android:id="@+id/home_tv_high_low"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:fontFamily="@font/jalnan"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_shape_transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="20dp"
                        android:text="최저"
                        android:textSize="20dp"
                        android:fontFamily="@font/jalnan"/>

                    <TextView
                        android:id="@+id/home_tv_min_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginRight="40dp"
                        android:textColor="#0652DD"
                        android:textSize="29dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/jalnan"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="41dp"
                        android:background="#99000000"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="20dp"
                        android:text="최고"
                        android:textSize="20dp"
                        android:fontFamily="@font/jalnan"/>

                    <TextView
                        android:id="@+id/home_tv_max_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="#EA2027"
                        android:textSize="29dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/jalnan"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:layout_marginTop="5dp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="시간별"
                        android:textColor="@color/white"
                        android:fontFamily="@font/jalnan"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_shape_transparent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="12dp"
                        android:overScrollMode="never">

                    </androidx.recyclerview.widget.RecyclerView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/home_chart"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginRight="27dp"
                         />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_shape_transparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="96dp"
                            android:layout_marginRight="119dp"
                            android:text="오전"
                            android:textSize="20dp"
                            android:fontFamily="@font/jalnan"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:text="오후"
                            android:textSize="20dp"
                            android:fontFamily="@font/jalnan"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="290dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/umbrella" />

                        <TextView
                            android:id="@+id/home_tv_am_rain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="50dp"
                            android:text="10"
                            android:textSize="20dp"
                            android:fontFamily="@font/jalnan"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/umbrella" />

                        <TextView
                            android:id="@+id/home_tv_pm_rain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:text="10"
                            android:textSize="20dp"
                            android:fontFamily="@font/jalnan"/>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="30dp"
                    >

                    <ImageView
                        android:id="@+id/home_img_sunrise"
                        android:layout_width="match_parent"
                        android:paddingLeft="100dp"
                        android:paddingRight="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_shape"
                        android:padding="25dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        >
                        <TextView
                            android:id="@+id/home_tv_sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/home_img_sunrise"
                            android:layout_marginLeft="61dp"
                            android:gravity="center"
                            android:text="일출\n123"
                            android:textSize="20dp"
                            android:fontFamily="@font/jalnan"/>

                        <TextView
                            android:id="@+id/home_tv_sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/home_img_sunrise"
                            android:layout_marginLeft="250dp"
                            android:gravity="center"
                            android:text="일몰\n1234"
                            android:textSize="20dp"
                            android:fontFamily="@font/jalnan"/>

                    </FrameLayout>




                </RelativeLayout>
            </LinearLayout>

        </ScrollView>

    </FrameLayout>
</layout>