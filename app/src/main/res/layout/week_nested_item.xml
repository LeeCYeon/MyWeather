<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardView"
    android:outlineProvider="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/n_hour"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="시간"
            android:fontFamily="@font/jalnan"/>

        <ProgressBar
            android:id="@+id/n_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/n_hour"
            android:progressDrawable="@drawable/progressbar_round" />

        <TextView
            android:id="@+id/head_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/n_progressBar"
            android:background="@drawable/only_round"
            android:gravity="center"
            android:padding="3dp"
            android:text="tmp"
            android:fontFamily="@font/jalnan"/>


    </RelativeLayout>



</androidx.cardview.widget.CardView>